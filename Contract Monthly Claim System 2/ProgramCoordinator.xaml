<Window x:Class="Contract_Monthly_Claim_System_2.ProgramCoordinator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Program Coordinator Login" Height="250" Width="400">
    <Grid Background="#FF877C94">
        <!-- Labels and input fields for email and password -->
        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,40,0,0"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,40,0,0" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,80,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,80,0,0" Width="200"/>

        <!-- Login button -->
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="150,130,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
